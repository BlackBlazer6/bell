{
    "manifest_version": 2,
    "name": "Countdown Extension",
    "description": "An extension that displays the time remaining in classes.",
    "version": "2.0.0",
    "content_security_policy": "script-src 'self' http://localhost:8005; object-src 'self';",
    "browser_action": {
        "default_icon": "favicons/lime.png",
        "default_popup": "chrome_extension/popup.html",
        "default_title": "Countdown"
    },
    "permissions": [
        "alarms",
        "https://bell.lahs.club/*",
        "http://bell.lahs.club/*",
        "http://localhost:8005/*",
        "storage",
        "webview"
    ],
    "externally_connectable": {
        "matches": ["http://localhost:8005/*"]
    },
    "icons": {
        "128": "icons/icon128.png"
    }
}